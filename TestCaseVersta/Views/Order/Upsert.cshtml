            </div>
            <div class="mb-3">
                <label asp-for="SendersCity"></label>
                <input asp-for="SendersCity" class="form-control" />
                <span asp-validation-for="SendersCity" class="text-danger"></span>
            </div>
             <div class="mb-3">
                <label asp-for="SendersAdress"></label>
                <input asp-for="SendersAdress" class="form-control" />
                <span asp-validation-for="SendersAdress" class="text-danger"></span>
            </div>
             <div class="mb-3">
                <label asp-for="RecipientsCity"></label>
                <input asp-for="RecipientsCity" class="form-control" />
                <span asp-validation-for="RecipientsCity" class="text-danger"></span>
            </div>
             <div class="mb-3">
                <label asp-for="RecipientsAdress"></label>
                <input asp-for="RecipientsAdress" class="form-control" />
                <span asp-validation-for="RecipientsAdress" class="text-danger"></span>
            </div>
             <div class="mb-3">
                <label asp-for="CargoWeight"></label>
                <input asp-for="CargoWeight" class="form-control" />
                <span asp-validation-for="CargoWeight" class="text-danger"></span>
            </div>
             <div class="mb-3">
                <label asp-for="PickupDate"></label>
                <input asp-for="PickupDate" class="form-control" />
                <span asp-validation-for="PickupDate" class="text-danger"></span>
            </div>
            <div class="col-12">
                @if(Model.Id!=0)
            {
            <button type="submit"  class="btn btn-primary" style="width:150px">Update</button>
            }
            else
            {
            <button type="submit"   class="btn btn-primary" style="width:150px">Create</button>
            }
            </a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary" style="width:150px">
                Back to list    
            </a>
            </div> 
         </div>
         </div>
         
         </div>
     </div>
    
</form>
@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script src="~/js/orderItem.js"></script>
   
    
